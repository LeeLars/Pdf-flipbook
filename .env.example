# Server
PORT=3001
NODE_ENV=development

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# S3/R2 Storage Configuration
S3_BUCKET=your-bucket-name
S3_REGION=auto
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Public URL for stored files (CDN or direct bucket URL)
STORAGE_PUBLIC_URL=https://your-bucket.your-domain.com

# Admin Account (for initial setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Allowed iframe origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,https://your-wordpress-site.com
